<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DispatchMedicalProvider" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/move</item>
        <item name="colorPrimaryVariant">@color/move</item>
        <item name="colorOnPrimary">@color/gray_light</item>
        <item name="colorSecondary">@color/move</item>
        <item name="colorSecondaryVariant">@color/move</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/move</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="background">@color/gray_light</item>
        <item name="android:buttonTint">@color/move</item>
        <item name="android:indeterminateTint">@color/move</item>
        <item name="android:windowBackground">@color/gray_light</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/gray</item>
    </style>

    <style name="Theme.DispatchMedicalProvider" parent="Base.Theme.DispatchMedicalProvider" />


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="postSplashScreenTheme">@style/Theme.DispatchMedicalProvider</item>
    </style>

    <style name="MaterialDialog" parent="Theme.DispatchMedicalProvider">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorOutlineVariant">@color/black</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

</resources>